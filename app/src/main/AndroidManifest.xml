<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.com.spottertest.spotter2">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".frontend.LoginActivity"
            android:screenOrientation="landscape"
            android:theme="@style/CustomNoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".frontend.SelectionActivity"
            android:screenOrientation="landscape"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name=".frontend.TheoryActivity"
            android:screenOrientation="landscape"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name=".frontend.MilTaskActivity"
            android:screenOrientation="landscape"
            android:theme="@style/CustomNoActionBarTheme" />
        <activity
            android:name=".frontend.AdjustmentActivity"
            android:screenOrientation="landscape"
            android:theme="@style/CustomNoActionBarTheme">
        </activity>
        <activity
            android:name=".frontend.PreparingAdjustmentActivity"
            android:screenOrientation="landscape"
            android:theme="@style/CustomNoActionBarTheme"/>
    </application>

</manifest>